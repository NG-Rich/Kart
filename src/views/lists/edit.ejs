<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('../static/partials/head'); %>
  </head>
  <body>
    <%- include('../static/partials/navbar'); %>
    <%- include('../static/partials/messages'); %>

    <h1 class="text-center py-4"><%= list.title %></h1>

    <div class="container px-6">
      <form class="" action="/lists/<%= list.id %>/update" method="post">
        <div class="form-group">
          <label for="title">Title:</label>
          <input class="form-control" type="text" name="title" aria-describedby="titleHelp" value="<%= list.title %>">
        </div>
        <div class="form-group">
          <label for="description">Description:</label>
          <input class="form-control" type="text" name="description" aria-describedby="descriptionHelp" value="<%= list.description %>">
        </div>
        <button type="submit" class="btn btn-success btn-lg btn-block">Update List</button>
      </form>
    </div>


    <%- include('../static/partials/baseScripts'); %>
  </body>
</html>
