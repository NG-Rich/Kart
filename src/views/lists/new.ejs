<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('../static/partials/head'); %>
  </head>
  <body>
    <%- include('../static/partials/navbar'); %>
    <%- include('../static/partials/messages'); %>

    <h1 class="text-center py-4">New List</h1>

    <div class="container px-6 justify-content-center">
      <form class="form" action="/lists" method="post">
        <div class="form-group">
          <label for="title">Title:</label>
          <input class="form-control" type="text" name="title" aria-describedby="titleHelp">
        </div>
        <div class="form-group">
          <label for="description">Description:</label>
          <input class="form-control" type="text" name="description" aria-describedby="descriptionHelp">
        </div>
        <button type="submit" class="btn btn-success">Create List</button>
      </form>
    </div>


    <%- include('../static/partials/baseScripts'); %>
  </body>
</html>
