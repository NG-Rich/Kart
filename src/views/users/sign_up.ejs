<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('../static/partials/head'); %>
  </head>
  <body>
    <%- include('../static/partials/navbar'); %>
    <%- include('../static/partials/messages'); %>

    <h1 class="text-center py-5">Create an account</h1>

    <div class="container px-6">
      <form class="form" action="/users" method="post">
        <div class="form-group">
          <div class="row">
            <div class="col">
              <label for="firstname">First Name:</label>
              <input type="text" class="form-control bg-light" name="fName" aria-describedby="firstNameHelp">
            </div>
            <div class="col">
              <label for="lastname">Last Name:</label>
              <input type="text" class="form-control bg-light" name="lName" aria-describedby="lastNameHelp">
            </div>
          </div>
        </div>
        <div class="form-group">
        <label for="email">Email:</label>
          <input type="email" class="form-control bg-light" name="email" aria-describedby="emailHelp">
        </div>
        <div class="form-group">
          <label for="password">Password:</label>
          <input type="password" class="form-control bg-light" name="password" aria-describedby="passwordHelp">
          <small class="text-muted" id="passwordHelp">Password must be at least 6 characters.</small>
        </div>
        <div class="form-group">
          <label for="passwordConfirmation">Confirm Password:</label>
          <input type="password" class="form-control bg-light" name="passwordConfirmation" aria-describedby="passwordHelp">
        </div>
        <button type="submit" class="btn btn-success btn-lg btn-block">Create account</button>
      </form>
    </div>

    <%- include('../static/partials/baseScripts'); %>
  </body>
</html>
